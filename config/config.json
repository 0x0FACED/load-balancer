{
	"server": {
		"host": "app",
		"port": 8080,
		"max_connections": 100,
		"read_timeout": 5000,
		"write_timeout": 10000,
		"idle_timeout": 120000
	},
	"database": {
		"dsn": "postges://user:password@localhost:5432/mydb"
	},
	"balancer": {
		"type": "least_conn",
		"healthcheck": {
			"interval": 2000,
			"timeout": 3000
		},
		"backends": [
			"http://app:8081",
			"http://app:8082",
			"http://app:8083",
			"http://app:8084",
			"http://app:8085",
			"http://app:8086"
		]
	},
	"rate_limiter": {
		"capacity": 10,
		"rate": 1,
		"refill_interval": 1000
	},
	"logger": {
		"level": "info",
		"logs_dir": "logs/app.log"
	}
}
{
	"server": {
		"host": "app",
		"port": 8080,
		"max_connections": 100,
		"read_timeout": 5000,
		"write_timeout": 10000,
		"idle_timeout": 120000
	},
	"database": {
		"dsn": "postges://user:password@localhost:5432/mydb"
	},
	"balancer": {
		"type": "least_conn",
		"healthcheck": {
			"interval": 2000,
			"timeout": 3000
		}
	},
	"rate_limiter": {
		"type": "redis",
		"capacity": 10,
		"rate": 1,
		"refill_interval": 1000,
		"ttl": 3600
	},
	"redis": {
		"address": "redis:6379",
		"password": "",
		"db": 0,
		"pool_size": 10,
		"dial_timeout": 5000,
		"read_timeout": 3000,
		"write_timeout": 3000
	},
	"logger": {
		"level": "info",
		"logs_dir": "logs/app.log"
	}
}